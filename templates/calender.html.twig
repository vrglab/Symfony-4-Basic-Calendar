<!DOCTYPE html>
<html class="bg-white dark:bg-gray-900 {{ theme }}">
      <head>
       <meta charset="UTF-8">

       {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
       {% endblock %}

       {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
       {% endblock %}
      </head>

      <body>
            <div class="container mx-auto border-4 rounded-md border-indigo-200/100 dark:border-indigo-500/100">
                  <div class="flex justify-center">
                        <p class="text-7xl text-black dark:text-white">{{'calender'|trans }}</p>
                  </div>
                  <div class="flex justify-center">
                        <p class="text-2xl text-black dark:text-white">{{ day.date }}, {{ month.month }}, {{ year.year }}</p>
                  </div>
            </div>
            <div class="flex justify-center pt-10 border-b-4 border-indigo-200/100 dark:border-indigo-500/100">
                  <p class="text-6xl text-black dark:text-white">{{ ('current.month.' ~ movingMonth.month)|trans }}, {{ movingYear.year }}</p>
            </div>
            <div class="flex justify-center space-x-4 pt-3">
                  <a href="{{ path('calendar_prev', {theme: theme }) }}" class="px-4 py-2 bg-amber-200 hover:bg-amber-400 text-black dark:text-white dark:bg-amber-500 dark:hover:bg-amber-700 font-bold rounded">{{ 'prev'|trans }}</a>
                  <a href="{{ path('home', {theme: theme }) }}" class="px-4 py-2 bg-amber-200 hover:bg-amber-400 font-bold text-black dark:text-white dark:bg-amber-500 dark:hover:bg-amber-700 rounded">{{ 'current.txt'|trans }}</a>
                  <a href="{{ path('calendar_next', {theme: theme }) }}" class="px-4 py-2 bg-amber-200 hover:bg-amber-400 text-black dark:text-white dark:bg-amber-500 dark:hover:bg-amber-700 font-bold rounded">{{ 'next'|trans }}</a>
            </div>
            <div class="grid grid-cols-7 pt-10 gap-2">

                  {# Empty cells before first day (Monday-aligned) #}
                  {% if firstWeekdayOffset > 0 %}
                        {% for i in 1..firstWeekdayOffset %}
                              <div></div>
                        {% endfor %}
                  {% endif %}

                  {# Actual days #}
                  {% for _day in days %}
                        {% include 'partials/day.html.twig' with {
                              day: _day,
                              currentDay: day
                        } %}
                  {% endfor %}
            </div>

      </body>
</html>